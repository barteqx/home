<%= form_for(@user) do |f| %>
	<% if @user.errors.any? %>
	    <div class="error_messages">
	      <h2>Form is invalid</h2>
	      <ul>
	        <% for message in @user.errors.full_messages %>
	          <li><%= message %></li>
	        <% end %>
	      </ul>
	    </div>
	  <% end %>
	  <p>
	    <%= f.label :login %><br />
	    <%= f.text_field :login %>
	  </p>
	  <p>
	    <%= f.label :email %><br />
	    <%= f.text_field :email %>
	  </p>
	  <p>
	    <%= f.label :password %><br />
	    <%= f.password_field :password %>
	  </p>
	  <p>
	    <%= f.label :password_confirmation %><br />
	    <%= f.password_field :password_confirmation %>
	  </p>
	  <% if current_user.permissions == "a" %>
	  	<%= f.label :permissions %><br />
	    <%= f.text_field :permissions %>
	  <% end %>
	  <%= f.submit %>
<% end %>